---
const { post } = Astro.props;

const { title, pubDate, tags, description } = post.data;
---

<article
  class="w-full py-10 border-b border-[var(--color-primary-light-border)] dark:border-[var(--color-primary-dark-border)] last:border-none"
>
  <!-- Title & Date -->
  <div class="flex items-start justify-between gap-4 mb-4">
    <h3 class="text-lg md:text-xl font-semibold leading-snug">
      {title}
    </h3>
    <time
      datetime={pubDate}
      class="text-sm opacity-70 text-[var(--color-primary-light-text)] dark:text-[var(--color-primary-dark-text)] whitespace-nowrap"
    >
      {pubDate}
    </time>
  </div>

  <!-- Tags -->
  <div class="flex flex-wrap gap-2 mb-6">
    {tags.map((tag: string) => (
      <span
        class="badge rounded-full px-3 py-1 text-xs font-medium backdrop-blur-sm border border-[var(--color-primary-light-border)] dark:border-[var(--color-primary-dark-border)] bg-[rgba(0,0,0,0.05)] dark:bg-[rgba(255,255,255,0.07)] text-[var(--color-primary-dark)] dark:text-[var(--color-primary-light)] shadow-sm"
      >
        {tag}
      </span>
    ))}
  </div>
    
  <div class="border-[0.5px] border-primary-dark-border/25 dark:border-primary-light-border/25 rounded-full w-full my-4"></div>

  <!-- Description -->
  <p class="mb-6 leading-relaxed opacity-90">
    {description}
  </p>

  <!-- Read More -->
  <a
    href={post.slug}
    class="inline-flex items-center gap-1 font-medium hover:underline text-primary-dark dark:text-primary-light"
  >
    Read More â†’
  </a>
</article>